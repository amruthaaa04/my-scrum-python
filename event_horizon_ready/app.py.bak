    if not admin:
        admin = User(
            full_name="Admin",
            email="admin@eventhorizon.com",
            password_hash=generate_password_hash("Admin@123"),
            is_admin=True,
            created_at=datetime.now(timezone.utc).isoformat()
        )
        db.session.add(admin)
        db.session.commit()

    # Add sample events if none exist
